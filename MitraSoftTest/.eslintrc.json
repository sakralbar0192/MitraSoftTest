{
  "env": { 
    "browser": true,
    "es2020": true 
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react-hooks/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react-refresh"
  ],
  "rules": {
    "react-refresh/only-export-components": "warn",
    "no-trailing-spaces": "error",
    "indent": [
		"error",
		4,
		{
			"SwitchCase": 1
		}
	],
	"eol-last": [
		"error",
		"always"
	],
	"linebreak-style": [
		"error",
		"windows"
	],
	"quotes": [
		"error",
		"single"
	],
	"semi": [
		"error",
		"never"
	],
	"no-mixed-spaces-and-tabs": [
		"error",
		"smart-tabs"
	],
	"no-multiple-empty-lines": [
		"error",
		{
			"max": 1
		}
	]
  }
}
